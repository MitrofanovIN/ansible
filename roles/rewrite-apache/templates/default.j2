<VirtualHost *:80>
        
        ServerAdmin webmaster@localhost
        DocumentRoot {{ root_site }}public


        <Directory {{ root_site }}public>
                 AllowOverride All
                 Options -Indexes +ExecCGI -Includes
                 Order allow,deny
                 Allow from all
        </Directory>

        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined

</VirtualHost>



